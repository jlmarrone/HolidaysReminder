
  <div class="group">
    <%= f.label :description, t("activerecord.attributes.holiday.description", :default => "Description"), :class => :label %>
    <%= f.text_field :description, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :holiday_date, t("activerecord.attributes.holiday.holiday_date", :default => "Holiday date"), :class => :label %>
    <%= f.date_select :holiday_date, :class => 'date_select' %>
  </div>

  <div class="group">
    <%= f.label :country_id, t("activerecord.attributes.holiday.country_id", :default => "Country"), :class => :label %>
    <%= f.select :country_id, Country.all.collect{ |c| [c.Country_Name, c.id] }, :prompt => "Select a Country" %>
    <span class="description">Ex: a simple text</span>
  </div>
        
  <%= f.hidden_field :user_id, :value => current_user.id %>
        
